    <changeSet id="create-table-player" author="Valera">
        <sql>
            CREATE TABLE race
            (
                id   SERIAL PRIMARY KEY NOT NULL,
                name VARCHAR(20)        NOT NULL
            )
        </sql>
    </changeSet>

    <changeSet id="task1-insert-HUMAN-into-race" author="Valera">
        <preConditions>
            <sqlCheck expectedResult="0">
                SELECT COUNT(name)
                FROM race
                WHERE name = 'HUMAN'
            </sqlCheck>
        </preConditions>
        <sql>
            INSERT INTO race (name)
            values ('HUMAN')
        </sql>
    </changeSet>

